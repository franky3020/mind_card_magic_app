<?xml version='1.0' encoding='utf-8'?>
<widget id="tw.franky.princesscard" version="1.0.1"
    android-versionCode="13"
    ios-CFBundleVersion="1.0.1.0"
    xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Princess Magic</name>
    <description>Princess Magic</description>
    <author email="210238hwsh@gmail.com">
        Franky Email
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <preference name="Fullscreen" value="true" />
    <preference name="orientation" value="landscape" />
    <preference name="DisallowOverscroll" value="true" />

    <!-- Platform Configs & Platform Overriding Configs -->
    <platform name="android">
